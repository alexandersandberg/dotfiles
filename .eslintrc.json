{
	"extends": [
		"eslint:recommended",
		"google",
		"plugin:vue/recommended",
		"prettier"
	],
	"rules": {
		"vue/max-attributes-per-line": [
			2,
			{
				"singleline": 20,
				"multiline": {
					"max": 1,
					"allowFirstLine": false
				}
			}
		],
		"indent": [2, "tab"],
		"no-tabs": 0,
		"no-undef": 0,
		"vue/html-indent": [
			"error",
			"tab",
			{
				"attribute": 1,
				"baseIndent": 1,
				"closeBracket": 0,
				"alignAttributesVertically": false,
				"ignores": []
			}
		],
		"vue/html-self-closing": 0
	}
}
